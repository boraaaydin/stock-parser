@model StockParser.Domain.Dto.ProfileDto
          <div class="card">
                <div class="card-header border-0">
                    <h3 class="card-title">Kurallarım</h3>
                    <div class="card-tools">
                        <a href=@Url.Action("RuleAddOrUpdate","Profile") class="btn btn-tool btn-sm">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a href="#" class="btn btn-tool btn-sm">
                            <i class="fas fa-bars"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-striped table-valign-middle">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Hedef Değeri</th>
                                <th>Şimdiki Değeri</th>
                                <th>Yüzde</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rule in Model.Rules)
                            {
                            <tr>
                                <td>
                                    @rule.Name
                                </td>
                                <td>
                                    @rule.PurchaseValue
                                </td>
                                <td>
                                    @rule.CurrentValue
                                </td>
                                <td>
                                    <span> %@Math.Round((rule.Percentage * 100 ?? 0), 2)</span>
                                </td>

                                <td>
                                    @Html.ActionLink("Edit","RuleAddOrUpdate","Profile",new { id= rule.Name})
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>